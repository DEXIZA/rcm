<%= form_with(url: search_todos_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>
<div class="contents row2">
  <div class="container">
    <% if user_signed_in? %>
      <% if can? :read, :ptn %>
        <p>＜検索結果 Ptnのみ＞</p>
        <%= render partial: 'todo',collection: @roll1 %>
      <% end %>

      <% if can? :read, :ptnreader %>
        <p>＜検索結果 Ptn主任用＞</p>
        <%= render partial: 'todo',collection: @roll2 %>
      <% end %>

      <% if can? :read, :employee %>
        <p>＜検索結果 社員用＞</p>
        <%= render partial: 'todo',collection: @roll3 %>
      <% end %>

      <% if can? :read, :deputy %>
        <p>＜検索結果 副店長用＞</p>
        <%= render partial: 'todo',collection: @roll4 %>
      <% end %>

      <% if can? :read,:mng %>
        <p>＜検索結果 店長用＞</p>
        <%= render partial: 'todo',collection: @todos %>
      <% end %>
    <% else %>
      <div>ログインして下さい</div>
    <% end %>

    <div>
      <%= link_to "検索条件を無くす", root_path %>
    </div>
  </div>
</div>