<div class="contents row">
  <div class="container">
    <h2>プロフィール編集</h2>

    <%= form_with model: @user do |f| %>
      <div class="field">
      <label class="form-text">お名前</label><br />
        <%= f.text_area :name,size: "20x1", autocomplete: "name" %>
      </div>
      <div class="field">
        よみがな（カナ）<br />
        <%= f.text_area :kana,size: "20x1", autocomplete: "kana" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>※<%= @minimum_password_length %> 文字以上入れて下さい。</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        電話番号<br />
        <%= f.text_area :phone,size: "20x1", autocomplete: "phone" %>
      </div>
      <div class="seinengappi" >生年月日を入力して下さい</div>
        <div class="input-birth-wrap">
          <%= raw sprintf(
                      f.date_select(
                        :birthday,
                        class:'select-birth',
                        id:"birth-date",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 1930,
                        end_year: (Time.now.year - 5),
                        date_separator: '%s'),
                      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>
      <div class="field">
        役職入力　※新しく入社の方はPtnを選択して下さい<br />
      <%= f.collection_select(:roll, Roll.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
      </div>
      <div><%= f.submit "プロフィールを編集する" ,class: :form__btn %></div>
    <% end %>
    <%=link_to 'トップへもどる', root_path %>
  </div>
</div>